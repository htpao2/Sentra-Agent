# APP_HOST：FastAPI 服务监听地址
APP_HOST=127.0.0.1

# APP_PORT：FastAPI 服务端口
APP_PORT=7200

# SENTRA_DEVICE：推理设备选择（auto/cpu/cuda）
SENTRA_DEVICE=auto

# SENTRA_CUDA_INDEX：SENTRA_DEVICE=cuda 时使用的显卡索引（兼容旧配置）
SENTRA_CUDA_INDEX=0

# SENTRA_SENTIMENT_MODEL：情感倾向模型（models/sentiment 下的目录或绝对路径）
SENTRA_SENTIMENT_MODEL=erlangshen

# SENTRA_EMOTION_MODEL：情绪识别模型（models/emotion 下的目录或绝对路径）
SENTRA_EMOTION_MODEL=Chinese-Emotion-Small

# EMO_MULTI_LABEL：是否启用多标签情绪推理
EMO_MULTI_LABEL=true

# EMO_THRESHOLD：多标签情绪判定阈值
EMO_THRESHOLD=0.35

# EMO_TOPK：输出的情绪标签数量（0 表示不限）
EMO_TOPK=0

# EMO_USE_ALIAS：是否使用 label_alias.json 进行标签别名映射
EMO_USE_ALIAS=true

# SENTRA_SENTIMENT_NEUTRAL：中性情感处理策略（auto/on/off）
SENTRA_SENTIMENT_NEUTRAL=auto

# EMOTION_LABELS_FILE：情绪标签配置文件路径
EMOTION_LABELS_FILE=app/vad_maps/default.json

# USER_STORE_DIR：用户状态与事件数据目录（包含 DuckDB）
USER_STORE_DIR=data

# USER_STATE_FAST_HALFLIFE_SEC：快速 EMA 半衰期（秒，默认 900）
USER_STATE_FAST_HALFLIFE_SEC=900

# USER_STATE_SLOW_HALFLIFE_SEC：慢速 EMA 半衰期（秒，默认 7200）
USER_STATE_SLOW_HALFLIFE_SEC=7200

# USER_STATE_ADAPT_GAIN：EMA 自适应增益（默认 2.0）
USER_STATE_ADAPT_GAIN=2.0

# USER_TOP_EMOTIONS：保留的高频情绪标签数量
USER_TOP_EMOTIONS=6

# MBTI_CLASSIFIER：MBTI 分析策略（heuristic 或 model）
MBTI_CLASSIFIER=heuristic

# MBTI_EXTERNAL_URL：外部 MBTI 服务地址（可选）
MBTI_EXTERNAL_URL=

# MBTI_IE_A_LOW：外向-内向维度低阈值
MBTI_IE_A_LOW=0.48

# MBTI_IE_A_HIGH：外向-内向维度高阈值
MBTI_IE_A_HIGH=0.58

# MBTI_TF_POS_LOW：思考-情感维度正向低阈值
MBTI_TF_POS_LOW=0.45

# MBTI_TF_POS_HIGH：思考-情感维度正向高阈值
MBTI_TF_POS_HIGH=0.60

# MBTI_POS_V_CUT：正向区间分割点
MBTI_POS_V_CUT=0.56

# MBTI_NEG_V_CUT：负向区间分割点
MBTI_NEG_V_CUT=0.44

# MBTI_SN_VSTD_LOW：实感-直觉维度波动下限
MBTI_SN_VSTD_LOW=0.07

# MBTI_SN_VSTD_HIGH：实感-直觉维度波动上限
MBTI_SN_VSTD_HIGH=0.14

# MBTI_JP_ASTD_LOW：判断-感知维度波动下限
MBTI_JP_ASTD_LOW=0.07

# MBTI_JP_ASTD_HIGH：判断-感知维度波动上限
MBTI_JP_ASTD_HIGH=0.14

# MBTI_ANALYTICS_MAX_EVENTS：MBTI 分析使用的最大事件数量
MBTI_ANALYTICS_MAX_EVENTS=10000

# VISUAL_FONT_PATH：可视化输出使用的字体路径（需确保文件存在）
VISUAL_FONT_PATH=fonts/SourceHanSansSC-Regular.otf
