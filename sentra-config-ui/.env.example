# 客户端端口
CLIENT_PORT=7244

# 后端服务端口（Fastify API / 生产静态服务）
SERVER_PORT=7245

# 允许的跨域来源（* 表示允许任意来源）
CORS_ORIGIN=*

# 日志级别：debug | info | warn | error
LOG_LEVEL=info

# 包管理器设置（npm | cnpm | pnpm | yarn | auto）
PACKAGE_MANAGER=npm

# Sentra Agent 根目录（相对于当前目录）
SENTRA_ROOT=..

# 登录安全令牌（密码），留空则随机生成
SECURITY_TOKEN=

# 依赖安装镜像配置（官方 | 国内加速）
MIRROR_PROFILE=cn

# Node 包管理器镜像
NPM_REGISTRY=https://registry.npmmirror.com

# Python 包索引镜像
PIP_INDEX_URL=https://pypi.tuna.tsinghua.edu.cn/simple

# 额外 Python 包索引（可选）
PIP_EXTRA_INDEX_URL=

# 受信任的 Python 包索引主机
PIP_TRUSTED_HOSTS=pypi.tuna.tsinghua.edu.cn,pypi.org

# PyTorch 专用索引（可选）
PYTORCH_INDEX_URL=

# 是否仅使用自定义索引（跳过官方 pypi 回退）
PIP_ONLY_CUSTOM_INDEX=

# 更新源配置（github | custom | gitee）
UPDATE_SOURCE=custom

# 自定义更新源地址（当 UPDATE_SOURCE=custom 时生效）
UPDATE_CUSTOM_URL=https://gitee.com/yuanpluss/Sentra-Agent