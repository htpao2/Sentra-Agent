# 是否启用插件
PLUGIN_ENABLED=true

# 插件超时时间，毫秒
PLUGIN_TIMEOUT_MS=180000

# 单次请求/导航超时时间(ms)，默认90000，建议根据网络调整
WEB_PARSER_TIMEOUT=90000

# 最大正文内容长度(字符)，超过将截断，默认200000
WEB_PARSER_MAX_CONTENT_LENGTH=200000

# Puppeteer渲染失败时的最大重试次数，默认2次
WEB_PARSER_MAX_RETRIES=2

# 每次重试前的基础等待时间(ms)，默认2000ms
WEB_PARSER_RETRY_DELAY=2000

# 是否启用Puppeteer进行JavaScript渲染，true/false，默认true（未安装自动回退axios）
WEB_PARSER_ENABLE_JAVASCRIPT=true

# 等待特定选择器出现后再提取内容（仅JS渲染有效），留空则不等待
WEB_PARSER_WAIT_FOR_SELECTOR=

# 浏览器视口宽度(px)，默认1366（桌面标准）
WEB_PARSER_VIEWPORT_WIDTH=1366

# 浏览器视口高度(px)，默认768（桌面标准）
WEB_PARSER_VIEWPORT_HEIGHT=768

# 页面等待策略：auto|network_idle|scroll|dom_stable，默认auto（智能选择）
WEB_PARSER_WAIT_STRATEGY=auto

# 组合等待的最大总时长(ms)，包括网络/滚动/DOM稳定等，默认15000ms
WEB_PARSER_MAX_TOTAL_WAIT=15000

# 网络空闲判定的静默空档时间(ms)，默认800ms
WEB_PARSER_NETWORK_IDLE_IDLE_MS=800

# DOM稳定检测的采样间隔(ms)，默认500ms
WEB_PARSER_DOM_STABLE_SAMPLE_MS=500

# DOM稳定所需的连续稳定采样次数，默认4次
WEB_PARSER_DOM_STABLE_SAMPLES=4

# 触发懒加载滚动的总步数，默认6步
WEB_PARSER_SCROLL_STEPS=6

# 每次滚动的像素距离(px)，默认1200px
WEB_PARSER_SCROLL_STEP_PX=1200

# 滚动步骤间的延迟时间(ms)，默认250ms
WEB_PARSER_SCROLL_DELAY_MS=250

# 加载中提示文本模式匹配（逗号分隔），命中时额外滚动+等待，默认常见中文/英文提示
WEB_PARSER_LOADING_PATTERNS=loading,加载中,请稍候,正在加载,请稍后,please wait,正在编译,processing,spinner

# 文本质量最低字符数阈值，低于此值继续等待或回退axios，默认400字符
WEB_PARSER_MIN_GOOD_LEN=400

# 按资源类型拦截的资源（逗号分隔），节省带宽，默认图片/字体/媒体/样式
WEB_PARSER_BLOCK_TYPES=image,font,media,stylesheet

# 按URL片段拦截的请求模式（逗号分隔），防追踪，默认常见分析服务
WEB_PARSER_BLOCK_URL_PATTERNS=googletagmanager,analytics,tracking,ads

# 页面就绪判断的JavaScript表达式，true时认为页面加载完成，留空则使用默认策略
WEB_PARSER_READY_EXPRESSION=

# 自定义User-Agent字符串，默认最新Chrome + SentraWebParser标识
WEB_PARSER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0.0.0 Safari/537.36 SentraWebParser/1.0.0"

# UA平台标识（传给Puppeteer），可选值：Windows/Android/iOS/Linux/macOS，默认Windows
WEB_PARSER_UA_PLATFORM=Windows

# UA元数据JSON（遵循CDP Emulation.UserAgentMetadata），自定义平台/移动端等信息
WEB_PARSER_UA_METADATA={"platform":"Windows","mobile":false}

# 是否使用代理服务器，true/false，默认false
WEB_PARSER_USE_PROXY=false

# 代理服务器地址，支持http://host:port或socks5://host:port格式，需配合USE_PROXY=true
WEB_PARSER_PROXY_SERVER=

# 插件整体执行超时时间(ms)，优先于全局TOOL_TIMEOUT_MS，默认35000ms
PLUGIN_TIMEOUT_MS=35000
