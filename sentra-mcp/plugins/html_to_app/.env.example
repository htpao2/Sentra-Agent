# 是否启用插件
PLUGIN_ENABLED=true

# 插件超时时间，毫秒
PLUGIN_TIMEOUT_MS=600000

# HTML 到桌面应用工具的 API 基础 URL（默认使用全局配置）
HTML_TO_APP_BASE_URL=https://yuanplus.chat/v1

# HTML 到桌面应用工具的 API 密钥
HTML_TO_APP_API_KEY=

# HTML 到桌面应用工具使用的 LLM 模型
HTML_TO_APP_MODEL=gpt-5.1-high

# 默认使用的应用框架（electron-vanilla | electron-react | electron-vue）
HTML_TO_APP_DEFAULT_FRAMEWORK=electron-vanilla

# 输出目录基准路径（相对于项目根目录）
HTML_TO_APP_OUTPUT_DIR=artifacts/apps

# 使用的包管理器（npm | pnpm | cnpm | yarn）
HTML_TO_APP_PACKAGE_MANAGER=npm

# 包管理器安装命令参数（可选）
HTML_TO_APP_INSTALL_ARGS=

# Electron 下载镜像地址（解决下载超时问题）
HTML_TO_APP_ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/
HTML_TO_APP_ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/

# HTTP/HTTPS 代理设置（可选）
HTML_TO_APP_HTTP_PROXY=
HTML_TO_APP_HTTPS_PROXY=

# 是否自动安装依赖（需要本地 Node.js 环境）
HTML_TO_APP_AUTO_INSTALL=true

# 是否自动打包为可执行文件（需要 electron-builder）
HTML_TO_APP_AUTO_BUILD=true

# 是否压缩打包结果为 zip
HTML_TO_APP_AUTO_ZIP=true

# 打包完成后是否删除临时构建文件（保留 zip）
HTML_TO_APP_CLEAN_BUILD=true

# 首次打包的超时时间（包含下载 Electron 时间）
PLUGIN_TIMEOUT_MS=1200000  # 20分钟