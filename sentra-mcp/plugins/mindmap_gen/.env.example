# Optional overrides for mindmap_gen plugin
# (Loader parses this file into pluginEnv; keys below are consumed by the plugin at runtime)

# LLM endpoint & credentials (per-plugin override)
# Base URL defaults to https://yuanplus.cloud/v1 if unset
MINDMAP_BASE_URL=https://yuanplus.cloud/v1
MINDMAP_API_KEY=
MINDMAP_MODEL=gemini-2.5-flash

# Render defaults
MINDMAP_TIMEOUT=90000
MINDMAP_WIDTH=2400
MINDMAP_HEIGHT=1600
MINDMAP_WAIT_TIME=9000
MINDMAP_DEFAULT_STYLE=default

# Host-level tool timeout (set via PLUGIN_TIMEOUT_MS to affect executor timeout)
# PLUGIN_TIMEOUT_MS=90000

# Note: The plugin omits max_tokens when calling the LLM (adaptive length)

# Local asset loading (avoid CDN timeouts)
# Modes: 'cdn' (default) or 'local'
MINDMAP_ASSET_MODE=local

# Optional explicit paths (used only when MODE=local). If omitted, defaults to
# <plugin>/assets/d3.min.js, markmap-lib.min.js, markmap-view.min.js
# MINDMAP_ASSET_D3_PATH=
# MINDMAP_ASSET_LIB_PATH=
# MINDMAP_ASSET_VIEW_PATH=
# Markmap 适配比例（0-1），控制内容占视口的比例，默认 0.9 表示留 10% 边距
MINDMAP_FIT_RATIO=0.9

# 最大缩放倍数，防止思维导图过度放大，默认 2.0
MINDMAP_MAX_SCALE=2.0
