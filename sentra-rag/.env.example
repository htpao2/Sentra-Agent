# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://yuanplus.chat/v1
OPENAI_MODEL=gpt-4.1-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIM=1536

# 视觉模型配置
VISION_API_KEY=sk-xxx
VISION_BASE_URL=https://yuanplus.chat/v1
VISION_MODEL=gemini-2.5-pro
VISION_MAX_TOKENS=-1

# Neo4j 数据库配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=datas

EMOTION_ENABLED=true
EMOTION_API_BASE_URL=http://127.0.0.1:7200
EMOTION_ANALYZE_PATH=/analyze
EMOTION_TIMEOUT=10000
EMOTION_MIN_TEXT_LENGTH=8

# 服务器配置
PORT=3000
NODE_ENV=development

# 存储配置
UPLOAD_DIR=./storage/uploads
VECTOR_STORAGE_DIR=./storage/vectors
CACHE_TTL=3600

# 处理配置
MAX_FILE_SIZE=10485760
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_BATCH_SIZE=100

# 消息库（OpenAI 风格消息） Neo4j 配置（可与主库分离）
MSG_NEO4J_URI=bolt://localhost:7687
MSG_NEO4J_USERNAME=neo4j
MSG_NEO4J_PASSWORD=your_neo4j_password_here
MSG_NEO4J_DATABASE=messages
MSG_NEO4J_MAX_POOL_SIZE=50
MSG_NEO4J_CONNECTION_TIMEOUT=30000
